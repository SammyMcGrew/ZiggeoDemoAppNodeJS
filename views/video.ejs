<% layout('layout') -%>
<% block('title', page_title) %>

            <div id="content" class="container">
                <h1 class="page-header"><%=page_title%></h1>
                <% if(update_result == 'success') { %>
                <div class="alert alert-success" role="alert">
                    <strong>Updated!</strong> The video successfully updated.
                </div>
                <% } %>
                <% if(update_result == 'fail') { %>
                <div class="alert alert-danger" role="alert">
                    <strong>Not updated!</strong> The video failed to update.
                </div>
                <% } %>
                <div class="row">
                    <div class="col-xs-12">
                        <ziggeoplayer ziggeo-video='<%=video_id%>' ziggeo-theme="modern"></ziggeo>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
                        <form method="POST" action="/video/<%=video_id%>">
                            <input name="tags" type="text" placeholder="Tags" value="<%=tags%>" class="form-control"/>
                            <input name="key" type="text" placeholder="Key" value="<%=key%>" class="form-control"/>
                            <input type="submit" value="Make Changes" />
                        </form>
                    </div>
                </div>
            </div>